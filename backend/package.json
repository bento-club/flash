{
    "type": "module",
    "name": "backend",
    "description": "This project was bootstrapped with Fastify-CLI.",
    "version": "1.0.0",
    "main": "app.ts",
    "directories": {
        "test": "test"
    },
    "scripts": {
        "test": "npm run build:ts && tsc -p test/tsconfig.json && FASTIFY_AUTOLOAD_TYPESCRIPT=1 node --test --experimental-test-coverage --loader ts-node/esm test/**/*.ts",
        "start": "npm run build:ts && fastify start -l info dist/app.js",
        "build:ts": "tsc",
        "clean": "rm -rf dist",
        "watch:ts": "tsc -w",
        "dev": "npm run build:ts && concurrently -k -p \"[{name}]\" -n \"TypeScript,App\" -c \"yellow.bold,cyan.bold\" \"npm:watch:ts\" \"npm:dev:start\"",
        "dev:start": "fastify start --ignore-watch='.ts$ prisma/dev.db' -w -l info -P dist/app.js",
        "format": "prettier --write .",
        "db:migrate": "prisma migrate dev",
        "db:generate": "prisma generate"
    },
    "keywords": [
        "webrtc",
        "file-transfer"
    ],
    "author": "",
    "license": "ISC",
    "dependencies": {
        "@fastify/autoload": "^5.0.0",
        "@fastify/sensible": "^5.0.0",
        "@prisma/client": "^5.19.1",
        "bcrypt": "^5.1.1",
        "dotenv": "^16.4.5",
        "fastify": "^4.26.1",
        "fastify-cli": "^6.3.0",
        "fastify-plugin": "^4.0.0",
        "fastify-type-provider-zod": "^2.0.0",
        "zod": "^3.23.8"
    },
    "devDependencies": {
        "@types/bcrypt": "^5.0.2",
        "@types/node": "^20.4.4",
        "c8": "^10.1.2",
        "concurrently": "^8.2.2",
        "fastify-tsconfig": "^2.0.0",
        "prettier": "^3.3.3",
        "prisma": "^5.19.1",
        "ts-node": "^10.4.0",
        "typescript": "^5.6.2"
    },
    "imports": {
        "#src/*": "./dist/*"
    }
}
